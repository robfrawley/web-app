{
  "paths": {
    "out" : {
      "root" : "web/assets/compiled/",
      "js"   : "${paths.out.root}js/",
      "css"  : "${paths.out.root}css/"
    },
    "src" : {
      "root" : "web/assets/src/",
      "js"   : "${paths.src.root}js/",
      "scss" : "${paths.src.root}scss/"
    },
    "bs" : {
      "root" : "web/components/bootstrap-sass/assets/",
      "js"   : "${paths.bs.root}javascripts/",
      "scss" : "${paths.bs.root}stylesheets/"
    },
    "config" : {
      "banner-text"        : ".grunt/config-banner.txt",
      "commonjs-generator" : ".grunt/commonjs-generator.js"
    }
  },
  "files" : {
    "js" : [
      "${paths.bs.js}bootstrap/transition.js",
      "${paths.bs.js}bootstrap/alert.js",
      "${paths.bs.js}bootstrap/button.js",
      "${paths.bs.js}bootstrap/carousel.js",
      "${paths.bs.js}bootstrap/collapse.js",
      "${paths.bs.js}bootstrap/dropdown.js",
      "${paths.bs.js}bootstrap/modal.js",
      "${paths.bs.js}bootstrap/tooltip.js",
      "${paths.bs.js}bootstrap/popover.js",
      "${paths.bs.js}bootstrap/scrollspy.js",
      "${paths.bs.js}bootstrap/tab.js",
      "${paths.bs.js}bootstrap/affix.js"
    ]
  },
  "tasks": {
    "autoprefixer": {
      "browserList": [
        "Android >= 4",
        "Chrome >= 28",
        "Firefox >= 40",
        "Explorer >= 11",
        "iOS >= 7",
        "Opera >= 30",
        "Safari >= 9"
      ]
    }
  }
}
